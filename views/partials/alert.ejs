<script>
if ('<%= type %>' == ('alert-warning' || 'alert-failure')) {
    var chime = new Audio('/sound/negative-alert.wav')
    chime.volume = 0.5
} else {
    var chime = new Audio('/sound/Notification.wav')
    chime.volume = 0.2
}
chime.play();

setTimeout(function() { $('.alert').fadeOut(); }, 4000);
$(document).ready(function () {
    $('.alert').on('click', '.close-icon', function(e) {
        $('.close-icon').parent().fadeOut();
    });
});

</script>
<div class="alert <%= type %>">
<i class="alert-icon fas fa-<%= icon %>"></i>
<span><%= message %></span>
<i class="close-icon fas fa-times"></i>
</div>