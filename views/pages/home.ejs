<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>   
    
</head>
<body>
    <div id="header"><div class="logo"><% include ../partials/logo.ejs %></div></div>
	<div class="page-container">
        <div class="card sidebar">
            <h1>Welcome!</h1>
            <h3>Login or Register to start playing.</h3>
            <div class="account-form-wrapper">
                <% alerts = ['Login Successful!'] %>
                <% alerts.forEach(function(alert){ %>
                    <%- include('../partials/alert.ejs', {message: alert, type: 'alert-success', icon: 'check'}); %>
                  <% }); %>
                <form action="/login" method="post" class='login-form'>
                    <input type="text" name="uname" placeholder="Username" class="login-text-input">
                    <input type="password" name="pwd" placeholder="Password" class="login-text-input">
                    <input type="submit" name="login" value="Login" class="button login-button" > <br>
                </form>
                <form action="/signup" method="post" class='login-form'>
                    <input type="submit" name="signUp" value="Sign Up" class="button signup-button">
                </form>
            </div>

        </div>
        
            <div id='canvas-wrapper'>
                <div class='card' id='canvas-container'>
                    <canvas id="draw-area" width="840" height="640"><script src="./canvas-drawing.js"></script></canvas>
                    
                </div>
                <div class='card'id='canvas-toolbar'>
                    <div class='tool'>
                        <i class="fas fa-palette"></i>
                        <span>Color</span>
                    </div>
                    <div class='tool'>
                        <i class="fas fa-pencil-alt"></i>
                        <span>Size</span>
                    </div>
                    <div id='tool-clear' class='tool'>
                        <i class="fas fa-times"></i>
                        <span>Reset</span>
                    </div>
                </div>
            </div>

            <div class='card' id='chat-wrapper'></div>

        
      </div>
      <script type='text/javascript' src='http://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.4.0/fabric.min.js'></script>
</body>

</html>