<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
</head>
<body>
    <div id="header"><div class="logo"><% include ../partials/logo.ejs %></div></div>
	<div class="page-container">
        <div class="card sidebar center-flex">
            <div id='round-timer'><span>53</span></div>
            <div id='round-number'><span>Round <strong>1</strong> of <strong>3</strong></span></div>
            
            <div id='players-list'>
                <% var places = ['gold','silver','bronze','runner-up','runner-up']; %>
                <% places.forEach(function(place){ %>
                    <%- include('../partials/player-list-item.ejs', {place: place}); %>
                  <% }); %>
            </div>
            

        </div>
        
            <div id='canvas-wrapper'>
                <div class='card' id='canvas-container'>
                      <% word_object.words.forEach(function(word){ %>
                        <span><%= word.word %>: <%= word.link %></span><br>
                      <% }); %>
                    <canvas id="draw-area" width="840" height="640"></canvas>
                    
                </div>
                <div class='card' id='canvas-toolbar'>
                    <div id='tool-color' class='tool'>
                        <i class="fas fa-palette"></i>
                        <span>Color</span>
                    </div>
                    <div id='tool-size' class='tool'>
                        <i class="fas fa-pencil-alt"></i>
                        <span>Size</span>
                    </div>
                    <div id='tool-clear' class='tool'>
                        <i class="fas fa-times"></i>
                        <span>Reset</span>
                    </div>
                    <div id='tool-undo' class='tool'>
                        <i class="fas fa-undo"></i>
                        <span>Undo</span>
                    </div>
                    <div id='tool-eraser' class='tool'>
                        <i class="fas fa-eraser"></i>
                        <span>Eraser</span>
                    </div>
                </div>
            </div>

            <div class='card' id='chat-wrapper'>

                    <div class="chat-main">
                      <div class="chat-messages"></div>
                    </div>

                    <div class="chat-form-container">
                      <form id="chat-form">
                        <input
                          id="msg"
                          type="text"
                          placeholder="Enter Message"
                          required
                          autocomplete="off"
                        />
                        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
                      </form>
                    </div>

                    <a href="https://sketchy-app-production.herokuapp.com/" class="btn">Leave Game</a>

            </div>
      </div>

        <span id='sessionJSON' hidden>
            <%= JSON.stringify(session); %>
        </span>
        <script src="/parse-session.js"></script>

      <script src="/socket.js"></script>
      <script src="/canvas.js"></script>
      <script src="/chat.js"></script>
      
</body>

</html>