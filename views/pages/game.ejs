<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>   
    
</head>
<body>
    <div id="header"><div class="logo"><% include ../partials/logo.ejs %></div></div>
	<div class="page-container">
        <div class="card sidebar center-flex">
            <div id='round-timer'><span>53</span></div>
            <div id='round-number'><span>Round <strong>1</strong> of <strong>3</strong></span></div>
            
            <div id='players-list'>
                <% var places = ['gold','silver','bronze','runner-up','runner-up']; %>
                <% places.forEach(function(place){ %>
                    <%- include('../partials/player-list-item.ejs', {place: place}); %>
                  <% }); %>
            </div>
            

        </div>
        
            <div id='canvas-wrapper'>
                <div class='card' id='canvas-container'>
                    <canvas id="draw-area" width="840" height="640"><script src="./canvas-drawing.js"></script></canvas>
                    
                </div>
                <div class='card'id='canvas-toolbar'>
                    <div class='tool'>
                        <i class="fas fa-palette"></i>
                        <span>Color</span>
                    </div>
                    <div class='tool'>
                        <i class="fas fa-pencil-alt"></i>
                        <span>Size</span>
                    </div>
                    <div id='tool-clear' class='tool'>
                        <i class="fas fa-times"></i>
                        <span>Reset</span>
                    </div>
                </div>
            </div>

            <div class='card' id='chat-wrapper'></div>

        
      </div>
      <script type='text/javascript' src='http://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.4.0/fabric.min.js'></script>
      
</body>

</html>