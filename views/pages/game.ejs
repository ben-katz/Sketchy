<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header.ejs %>
    <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
    <script type='text/javascript' src='http://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.4.0/fabric.min.js'></script>
</head>
<body>
    <div id="header"><div class="logo"><% include ../partials/logo.ejs %></div></div>
	<div class="page-container">
      <div class="card sidebar center-flex space-between">
        <div id='game-info'>
          <div id="players-list"></div>
        </div>
        <div id='options'>
          <button class="button start-button">Start Game</button>
          <button class="button leave-button">Leave Game</button>
        </div>
      </div>
        
            <div id='canvas-wrapper'>
                <div class='card' id='canvas-container'>
                      <!--<% word_object.words.forEach(function(word){ %>
                        <span><%= word.word %>: <%= word.link %></span><br>
                      <% }); %> -->
                    <canvas id="draw-area" width="840" height="640"></canvas>
                </div>
                <div class='card' id='canvas-toolbar'>
                      <div id='tool-color' class='tool'>
                          <!-- <i class="fas fa-palette"></i> -->
                          <input type = 'color' id = "tool-color-wheel" value = "#00332f">
                          <span>Color</span>
                      </div>
                      <div id='tool-size' class='tool'>
                          <!-- <i class="fas fa-pencil-alt"></i> -->
                          <input type = 'range' id = 'tool-size-slider' value = 5 min = 5 max = 20>
                          <span>Size</span>
                      </div>
                      <div id='tool-eraser' class='tool'>
                        <i class="fas fa-eraser"></i>
                        <span>Eraser</span>
                      </div>
                      <div id='tool-clear' class='tool'>
                          <i class="fas fa-times"></i>
                          <span>Reset</span>
                      </div>
                      <div id='tool-undo' class='tool'>
                          <i class="fas fa-undo"></i>
                          <span>Undo</span>
                      </div>
                      <div id='tool-redo' class='tool'>
                        <i class="fa fa-repeat"></i>
                        <span>Redo</span>
                      </div>
                    </div>
            </div>

            <div class='card' id='chat-wrapper'>

                    <div class="chat-main">
                      <div class="chat-messages"></div>
                    </div>

                    <div class="chat-form-container">
                      <form id="chat-form">
                        <input
                          id="msg"
                          class='text-field'
                          type="text"
                          placeholder="Enter message"
                          autocomplete="off"
                        />
                        <button class="button send-button"><i class="fas fa-paper-plane"></i> Send</button>
                      </form>
                    </div>
            </div>
      </div>

        <span id='sessionJSON' hidden>
            <%= JSON.stringify(session); %>
        </span>

      <script src="/socket.js"></script>
      <script src="/app.js"></script>
      
</body>

</html>