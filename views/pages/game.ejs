<!DOCTYPE html>
<html>
<head>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> -->
    <% include ../partials/header.ejs %>   
    
</head>
<body>
    <div id="header"><div class="logo"><% include ../partials/logo.ejs %></div></div>
	<div class="page-container">
        <div class="card sidebar center-flex">
            <div id='round-timer'><span>53</span></div>
            <div id='round-number'><span>Round <strong>1</strong> of <strong>3</strong></span></div>
            
            <div id='players-list'>
                <% var places = ['gold','silver','bronze','runner-up','runner-up']; %>
                <% places.forEach(function(place){ %>
                    <%- include('../partials/player-list-item.ejs', {place: place}); %>
                  <% }); %>
            </div>
            

        </div>
        
            <div id='canvas-wrapper'>
                <div class='card' id='canvas-container'>
                    <canvas id="draw-area" width="840" height="640"><script src="./canvas-drawing.js" crossorigin="anonymous"></script></canvas>
                    
                </div>
                <div class='card'id='canvas-toolbar'>
                    <div class='tool' id = "tool-color">
                        <i class="fas fa-palette"></i>
                        <span>Color</span>
                    </div>
                    <div class='tool' id = "tool-eraser">
                        <i class="fa fa-eraser"></i>
                        <span>Eraser</span>
                    </div>
                    <div class='tool' id = "tool-fill">
                        <i class="fas fa-fill-drip"></i>
                        <span>Fill</span>
                        
                    </div>
                    <div class='tool'>
                        <i class="fas fa-pencil-alt"></i>
                        <span>Size</span>
                    </div>
                    <div id='tool-clear' class='tool'>
                        <i class="fas fa-times"></i>
                        <span>Reset</span>
                    </div>
                    <div id='tool-undo' class='tool'>
                        <i class="fas fa-undo"></i>
                        <span>Undo</span>
                    </div>
                    <div id='tool-redo' class='tool'>
                        <i class="fa fa-repeat"></i>
                        <span>Redo</span>
                    </div>
                </div>
            </div>
            <div class='card' id='chat-wrapper'></div>
            <!-- <input type="text" class="colorpicker-input" /> -->
        
      </div>
      <script type='text/javascript' src='http://cdnjs.cloudflare.com/ajax/libs/fabric.js/1.4.0/fabric.min.js'></script>
      
      
      
</body>

</html>